            <div class="media-body">
                <h4 class="media-heading"><a href="{{ video.get_absolute_url() }}">{{ video.title }}</a></h4>
                <div class="sub-heading">
                    <strong>Video {{ video.episode }} Â· Length: {{ video.length_in_minutes() }}</strong>
                    {% if video.is_premium %}
                    <span class="label label label-warning pro-label">pro video</span>
                    {% endif %}
                    {% if video.revised %}
                    <span class="label label label-revised">revised</span>
                    {% endif %}
                </div>
                <p>
                    {{ video.description }}
                </p>
            </div>
        </div>

