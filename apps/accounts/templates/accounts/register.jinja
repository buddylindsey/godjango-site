{% extends "base.jinja" %}

{% block content %}
<div class="row">
    <div class="col-md-8">
        <div class="text-center margin-20">
            <img src="{{ static("img/godjango-logo.png") }}" />
            <h1>Sign Up</h1>
        </div>
        <form method="post" accept-charset="utf-8" class="form-horizontal">
            {% csrf_token %}
            <div class="form-group {% if form['username'].errors %}has-error{% endif %}">
                <label for="id_username" class="col-sm-6 control-label">username</label>
                <div class="col-sm-4">
                    <input id="id_username" maxlength="30" name="username" type="text" class="form-control" />
                    {% if form['username'].errors %}
                    <span class="help-block">
                        {% for error in form['username'].errors %}
                        {{ error }}
                        {% endfor %}
                    </span>
                    {% endif %}
                </div>
            </div>
            <div class="form-group {% if form['email'].errors %}has-error{% endif %}">
                <label for="id_email" class="col-sm-6 control-label">email</label>
                <div class="col-sm-4">
                    <input id="id_email" name="email" type="email" class="form-control" />
                    {% if form['email'].errors %}
                    <span class="help-block">
                        {% for error in form['email'].errors %}
                        {{ error }}
                        {% endfor %}
                    </span>
                    {% endif %}
                </div>
            </div>
            <div class="form-group {% if form['password1'].errors %}has-error{% endif %}">
                <label for="id_password1" class="col-sm-6 control-label">password</label>
                <div class="col-sm-4">
                    <input id="id_password1" name="password1" type="password" class="form-control" />
                    {% if form['password1'].errors %}
                    <span class="help-block">
                        {% for error in form['password1'].errors %}
                        {{ error }}
                        {% endfor %}
                    </span>
                    {% endif %}
                </div>
            </div>
            <div class="form-group {% if form['password2'].errors %}has-error{% endif %}">
                <label for="id_password1" class="col-sm-6 control-label">password confirmation</label>
                <div class="col-sm-4">
                    <input id="id_password2" name="password2" type="password" class="form-control" />
                    {% if form['password2'].errors %}
                    <span class="help-block">
                        {% for error in form['password2'].errors %}
                        {{ error }}
                        {% endfor %}
                    </span>
                    {% endif %}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-6 col-sm-6">
                    <input type="submit" value="Sign Up" class="btn btn-primary">
                </div>
                <div class="col-sm-offset-6 col-sm-6">
                    <a href="{{ url("login") }}" class="padding-top-10">login</a>
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock %}
